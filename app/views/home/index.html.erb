<div class="bg-base-100 text-base-content">
  <div class="max-w-4xl mx-auto px-4 py-16 text-center">
    <h1 class="text-4xl font-bold text-primary mb-4">Welcome to ZenithArc</h1>
    <p class="text-lg text-base-content/70 mb-8">
      A secure, modular platform for managing customer and arc account operations with ease.
    </p>

    <% if !customer_signed_in? && !arc_signed_in? %>
      <div class="flex justify-center gap-6">
        <%= link_to "Customer Login", customer_login_path,
            class: "px-6 py-2 rounded-lg bg-primary text-primary-content hover:bg-primary-focus transition" %>

        <%= link_to "Arc Login", arc_login_path,
            class: "px-6 py-2 rounded-lg bg-secondary text-secondary-content hover:bg-secondary-focus transition" %>
      </div>
    <% end %>

    <div class="mt-16 grid grid-cols-1 sm:grid-cols-2 gap-6 text-left">
      <div class="p-6 bg-neutral text-neutral-content rounded-xl shadow-md hover:shadow-xl transition">
        <h2 class="text-xl font-semibold mb-2">Customer Features</h2>
        <ul class="list-disc list-inside text-sm text-neutral-content/80">
          <li>Make secure transactions</li>
          <li>Manage your accounts</li>
          <li>Track transaction history</li>
        </ul>
        <% if customer_signed_in? %>
          <%= link_to "Go to Dashboard", customer_dashboard_path,
              class: "mt-2 inline-block px-4 py-2 rounded-md bg-primary text-primary-content hover:bg-primary-focus transition" %>
        <% end %>
      </div>

      <div class="p-6 bg-accent text-accent-content rounded-xl shadow-md hover:shadow-xl transition">
        <h2 class="text-xl font-semibold mb-2">Arc Admin Panel</h2>
        <ul class="list-disc list-inside text-sm text-accent-content/80">
          <li>Review and validate transactions</li>
          <li>Assign roles to arc accounts</li>
          <li>Monitor user activity</li>
        </ul>
        <% if arc_signed_in? %>
          <%= link_to "Go to Dashboard", arc_dashboard_path,
              class: "mt-2 inline-block px-4 py-2 rounded-md bg-secondary text-secondary-content hover:bg-secondary-focus transition" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
