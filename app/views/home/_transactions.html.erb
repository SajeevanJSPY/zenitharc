<section id="transactions">
  <h3 class="text-xl font-semibold mb-4">Transactions</h3>
  <div class="overflow-x-auto">
    <% if local_assigns[:transactions] %>
      <table class="min-w-full table-auto border border-base-300">
        <thead class="bg-base-300">
          <tr>
            <th class="px-4 py-2 text-left">ID</th>
            <th class="px-4 py-2 text-left">Amount</th>
            <th class="px-4 py-2 text-left">From</th>
            <th class="px-4 py-2 text-left">To</th>
            <th class="px-4 py-2 text-left">Type</th>
            <th class="px-4 py-2 text-left">Status</th>
          </tr>
        </thead>
        <tbody class="bg-base-100">
          <% local_assigns[:transactions].each do |t| %>
            <tr>
              <td class="px-4 py-2"><%= t.id %></td>
              <td class="px-4 py-2"><%= t.amount %></td>
              <td class="px-4 py-2"><%= Customer::Account.find(t.from_id).account_number %></td>
              <% if t.to_id %>
                <td class="px-4 py-2"><%= Customer::Account.find(t.to_id).account_number %></td>
              <% end %>
              <td class="px-4 py-2"><%= t.transaction_type %></td>
              <td class="px-4 py-2"><%= t.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-xl text-error font-semibold">There is no transactions to view</p>
    <% end %>
  </div>
</section>
