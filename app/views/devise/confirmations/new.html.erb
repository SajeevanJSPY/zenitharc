<div class="min-h-screen flex items-center justify-center bg-base-200">
  <div class="w-full max-w-md p-8 bg-base-100 rounded-lg shadow border border-base-300">
    <h2 class="text-2xl font-bold text-center text-primary mb-6">Resend Confirmation</h2>

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block mb-1 text-sm font-medium text-base-content" %>
        <%= f.email_field :email, required: true, autofocus: true, class: "input input-bordered w-full" %>
      </div>

      <%= f.submit "Resend", class: "btn btn-primary w-full" %>
    <% end %>
  </div>
</div>

