<div class="flex items-center justify-center bg-base-200">
  <div class="w-full max-w-md p-8 bg-base-100 rounded-lg shadow-lg border border-base-300 my-20">
    <h2 class="text-2xl font-bold text-center text-primary mb-6">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if @is_customer_account %>
        <div class="mb-4">
          <%= f.label :full_name, class: "block mb-1 text-sm font-medium text-base-content" %>
          <%= f.text_field :full_name, autofocus: true, required: true, class: "input input-bordered w-full" %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :email, class: "block mb-1 text-sm font-medium text-base-content" %>
        <%= f.email_field :email, required: true, class: "input input-bordered w-full" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block mb-1 text-sm font-medium text-base-content" %>
        <%= f.password_field :password, autocomplete: "new-password", required: true, class: "input input-bordered w-full" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block mb-1 text-sm font-medium text-base-content" %>
        <%= f.password_field :password_confirmation, required: true, class: "input input-bordered w-full" %>
      </div>

      <%= f.submit "Create Account", class: "btn btn-primary w-full" %>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to "Already have an account? Sign in", new_session_path(resource_name), class: "text-sm text-primary hover:underline" %>
    </div>
  </div>
</div>

