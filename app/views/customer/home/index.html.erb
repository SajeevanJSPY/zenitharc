<% if current_customer %>
  <div class="max-w-4xl mx-auto mt-10 px-4 text-center">
    <h1 class="text-4xl font-bold text-primary mb-4">Welcome to Your Customer Portal</h1>
    <p class="text-lg text-base-content mb-6">
      Manage your accounts, view transaction history, and stay up to date with your finances.
    </p>

    <a href="<%= customer_dashboard_path %>" 
       class="inline-block bg-primary text-primary-content px-6 py-3 rounded-lg font-semibold hover:bg-primary-focus transition">
      Go to Dashboard
    </a>
    <div class="p-4 bg-base-100 rounded-xl shadow">
      <p class="font-semibold mb-2">Actions</p>
      <div class="flex flex-col gap-2">
        <%= button_to "Logout", customer_logout_path, method: :delete, class: "btn btn-error w-full" %>
      </div>
    </div>
  </div>
<% else %>
  <div class="flex items-center justify-center bg-base-200 px-4">
    <div class="grid grid-cols-1 max-w-3xl w-full mt-10 mb-20">
      <a href="<%= customer_login_path %>" class="card bg-base-100 shadow-xl hover:shadow-2xl transition">
        <div class="card-body items-center text-center">
          <h2 class="card-title text-2xl">Login as User</h2>
          <p class="text-base-content">Access user dashboard and personal services.</p>
          <div class="card-actions mt-4">
            <button class="btn btn-primary w-full">Login</button>
          </div>
        </div>
      </a>
    </div>
  </div>
<% end %>
